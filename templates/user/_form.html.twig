{% extends 'base.html.twig' %}
{% block title %}Modifier Profil{% endblock %}

{% block body %}

<h2>Modifier votre profil</h2>

<div id="profil">
    {{ form_start(form) }}
    <div id="imgUpload">
        {% if app.user.img is empty %}
            {{ form_row(form.img) }}
        {% else %}
            <img id="avatar" alt="avatar"  src="{{ asset('uploads/photos/') }}{{ user.img }}">
            {{ form_row(form.img) }}
        {% endif %}
    </div>
    <div class="row">
        <div class="col-6">
            {{ form_row(form.pseudo) }}
            <label for="prenom">Pr√©nom</label>
            <input type="text" name="prenom" value="{{ user.prenom }}" class="form-control form-control-lg" disabled>
            <label for="prenom">Nom</label>
            <input type="text" name="nom"  value="{{ user.nom }}" class="form-control form-control-lg" disabled>
            {{ form_row(form.telephone) }}
        </div>
        <div class="col-6">
            <label for="prenom">Email</label>
            <input type="text" name="email"  value="{{ user.email }}" class="form-control form-control-lg" disabled>
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.site) }}

        </div>
    </div>
    <button class="bouton">{{ button_label|default('Enregistrer') }}</button>
    <button class="bouton"><a href="{{ path('user_show', { 'id' : app.user.id}) }}">Annuler</a></button>
    {{ form_end(form) }}
</div>

{% endblock %}
