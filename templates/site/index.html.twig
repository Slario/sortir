{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
    <h2>Liste des sites</h2>

    <div id="path_adrSite" data-path="{{ path('site_recherche') }}"></div>
    <h3>Filtrer les sites</h3>
    <form id="rechercheSite">
        <div class="d-inline-block">
            <input type="text" name="recherche" class="form-control" id="rechercher">
        </div>
        <div class="d-inline-block">
            <img alt="rechercher" class="recherche" src="{{ asset('build/images/loupe.svg') }}">
        </div>
    </form>

    <div id="resultat">
        {% if rechercher is defined %}
        <div class="text-center">
            <table class="table table-dark">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for site in listeSites %}
                    <tr>
                        <td>{{ site.id }}</td>
                        <td>{{ site.nom }}</td>
                        <td>
                            <div class="d-inline-block">
                                <a href="{{ path('site_show', {'id': site.id}) }}" class="btn btn-primary">
                                    <img alt="plus" class="plus" src="{{ asset('build/images/look.svg') }}"></a>
                            </div>
                            <div class="d-inline-block">
                                <a href="{{ path('site_edit', {'id': site.id}) }}" class="btn btn-success">
                                    <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                            </div>
                            <div class="d-inline-block">
                                {{ include('site/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% else %}
            <div class="text-center">
                <table class="table table-dark">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for site in sites %}
                        <tr>
                            <td>{{ site.id }}</td>
                            <td>{{ site.nom }}</td>
                            <td>
                                <div class="d-inline-block">
                                    <a href="{{ path('site_show', {'id': site.id}) }}" class="btn btn-primary">
                                        <img alt="plus" class="plus" src="{{ asset('build/images/look.svg') }}"></a>
                                </div>
                                <div class="d-inline-block">
                                    <a href="{{ path('site_edit', {'id': site.id}) }}" class="btn btn-success">
                                        <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                                </div>
                                <div class="d-inline-block">
                                    {{ include('site/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {% endif %}


                <a href="{{ path('site_new') }}" class="bouton">
                    <img alt="plus" class="plus" src="{{ asset('build/images/add.svg') }}"> Ajouter un site
                </a>
            </div>
        </div>
    </div>
{% endblock %}
