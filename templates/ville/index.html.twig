{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
<h2>Liste des villes</h2>
<h3>Filtrer les villes</h3>
<form action="{{ path('ville_recherche') }}" method="GET">
    <div class="d-inline-block">
        <input type="text" name="recherche" class="form-control">
        <div class="resultat" id="resultat"></div>
    </div>
    <div class="d-inline-block">
        <input type="submit" value="Rechercher">
        <img alt="plus" class="plus" src="{{ asset('build/images/loupe.svg') }}">
    </div>
</form>


{% if rechercher is defined %}
<div class="text-center">
    <table class="table table-dark">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Code Postal</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for ville in listeVilles %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>
                    <div class="d-inline-block">
                        <a href="{{ path('ville_show', {'id': ville.id}) }}" class="btn btn-primary">
                            <img alt="plus" class="plus" src="{{ asset('build/images/look.svg') }}"></a>
                    </div>
                    <div class="d-inline-block">
                        <a href="{{ path('ville_edit', {'id': ville.id}) }}" class="btn btn-success">
                            <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                    </div>
                    <div class="d-inline-block">
                        {{ include('ville/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% else %}
    <div class="text-center">
        <table class="table table-dark">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code Postal</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.id }}</td>
                    <td>{{ ville.nom }}</td>
                    <td>{{ ville.codePostal }}</td>
                    <td>
                        <div class="d-inline-block">
                            <a href="{{ path('ville_show', {'id': ville.id}) }}" class="btn btn-primary">
                                <img alt="plus" class="plus" src="{{ asset('build/images/look.svg') }}"></a>
                        </div>
                        <div class="d-inline-block">
                            <a href="{{ path('ville_edit', {'id': ville.id}) }}" class="btn btn-success">
                                <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                        </div>
                        <div class="d-inline-block">
                            {{ include('ville/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% endif %}

        <a href="{{ path('ville_new') }}" class="bouton">
            <img alt="plus" class="plus" src="{{ asset('build/images/add.svg') }}"> Ajouter une ville
        </a>
        {% endblock %}
