{% extends 'base.html.twig' %}

{% block title %}
Annuler une sortie
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
        Nom de la sortie : {{ sortie.nom }}
        <br>
        Date de la sortie : {{ sortie.dateDebut | date('dd/mm/yyyy') }}
        <br>
        Nom de l'organisateur : {{ sortie.organisateur }}
            <br>
        Lieu : {{ sortie.lieu.nomLieu }} {{ sortie.lieu.rue }} {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom }}

        {{ form_start(form) }}

        {{ form_label(form.motif)}}
        {{form_widget(form.motif)}}
        {{ form_errors(form.motif) }}

        {{ form_row(form.submit) }}

        {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}





