{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <h1>Sortie</h1>
<div class="form-group ">
    <div class="row">
        <div class="col-6">

                Nom de la sortie
                {{ sortie.nom }}

                Date et heure de la sortie
                {{ sortie.dateDebut ? sortie.dateDebut|date('Y-m-d H:i:s') : '' }}

                Date limite de l'inscription
                {{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d H:i:s') : '' }}

                Nombre de places
                {{ sortie.nbInscriptionsMax }}

                Durée
                {{ sortie.duree }}

                Description et infos
                {{ sortie.descriptionInfos }}
        </div>
        <div class="col-6">
                Ville Organisatrice
                {{ sortie.site.nom }}

                Lieu
                {{ sortie.lieu.nomLieu }}

                Rue
                {{ sortie.lieu.rue }}

                Code Postal
                {{ sortie.lieu.ville.codePostal }}

                Latitude
                {{ sortie.lieu.latitude }}

                Longitude
                {{ sortie.lieu.longitude }}
        </div>

    </div>
</div>

{% if listeParticipant|length >0 %}
<div class="table-responsive">
    <table class="table">
        <thead>

        <tr>
            <th>Pseudo</th>
            <th>Nom</th>
        </tr>
        </thead>

        {% for Inscription in listeParticipant %}

            <tr>
                <td>{{ Inscription.participant.pseudo }}</td>
                <td>{{ Inscription.participant.nom }} {{ Inscription.participant.prenom }}</td>
                <td>{{ Ad.cp }}</td>
                <td>{{ Ad.prix }} €</td>
                <td>{{ Ad.categorie.getLibelle() }}</td>
                <td>{{   Ad.dateCreation | date('d/m/Y') }} à {{   Ad.dateCreation | date('H:i:s', "Europe/Paris") }}</td>
            </tr>



        {% endfor %}
    </table>

{% endblock %}
